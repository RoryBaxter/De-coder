import os
CoEnWoFile = (os.path.join(os.sys.path[0], "Common English Word"))
WoCoEnWoFile = open(os.path.join(os.sys.path[0], "CEWs.txt"),"r")
CipherText = input("Please input the cipher text\n")
CipherText=CipherText.replace(" ","")
CipherText=CipherText.lower()
TryText = ""
a=1
point = 100/len(CipherText)
HighScore = [0,0]
Scorce = 0
while a < 26:
    TryText=""
    for i in CipherText:
        b=i
        if (ord(b)+a)>=123:
            TryText +=chr((ord(b)+a)-26)
        else:
            TryText += chr(ord(b)+a)
        for i in WoCoEnWoFile:
            if i in TryText:
                    Scorce += point
            print("The score increased")
            print(i)
    if Scorce > HighScore[0]:
        HighScore=[Scorce,a]
    a+=1
print("The cipher level is proabily "+str(HighScore[1]))
